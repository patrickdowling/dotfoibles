extends c

snippet guard "header guard"
#ifndef ${1:`!p snip.rv = snip.basename.upper() or "name"`}_H_
#define $1_H_

${0:${VISUAL}}

#endif /* $1_H_ */
endsnippet

snippet stdh "c++ header"
#include <${1:${VISUAL}}>$0
endsnippet

snippet cls "class .. (class)"
class ${1:${VISUAL}} {
public:
	${2:public}
private:
	${3:private}
};
endsnippet

snippet ns "namespace .. (namespace)"
namespace${1/.+/ /m}${1:`!p snip.rv = snip.basename or "name"`} {
${VISUAL}$0
} // $1
endsnippet
